{
  "extends": [
    "config:base",
    "docker:pinDigests"
  ],
  "force": {
    "constraints": {
      "node": "< 15.0.0"
    }
  },
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^.github/workflows/continuous-integration.yml$"],
      "matchStrings": ["(?<depName>cypress/included):(?<currentValue>[0-9.]+)\n"],
      "datasourceTemplate": "docker"
    }
  ]
}
